<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    android:orientation="vertical"
    android:background="@drawable/row_product_bck"
    android:layout_margin="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nursery shop"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold">


        </TextView>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_rect04"
            android:layout_marginLeft="200dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reviewsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:paddingLeft="7dp"
                android:layout_gravity="center"
                android:text="4.0"
                android:textColor="#ffffff"/>

            <ImageView
                android:id="@+id/reviewIcon"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="2dp"
                android:layout_height="wrap_content"
                android:src="@drawable/review_icon"/>

        </LinearLayout>



</LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:layout_height="180dp"
        android:src="@drawable/shop1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:text="302 Apartment ,Near a temple , Main Road Anand, Gujrat"
            android:textSize="16dp"
            android:gravity="center">

        </TextView>
    </LinearLayout>



</LinearLayout>